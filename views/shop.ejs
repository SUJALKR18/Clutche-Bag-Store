<%- include('./partials/header') %>

<div class="w-full min-h-screen flex px-10 py-16 bg-[url('/images/image.png')] bg-cover bg-center text-white font-sans">
  <!-- Sidebar -->
  <div class="w-[22%] h-full pr-8 border-r border-white/10 space-y-10">
    <!-- Sort Options -->
    <div class="bg-black/20 backdrop-blur-xl p-4 rounded-2xl shadow-md border border-white/10">
      <h3 class="mb-2 font-semibold text-lg uppercase tracking-wide text-white">Sort by</h3>
      <form action="/shop">
        <select class="bg-black/30 text-white border border-white/20 rounded px-3 py-2 w-full shadow-sm focus:outline-none">
          <option value="popular">Popular</option>
          <option value="newest">Newest</option>
        </select>
      </form>
    </div>

    <!-- Categories -->
    <div class="bg-black/20 backdrop-blur-xl p-4 rounded-2xl shadow-md border border-white/10">
      <h3 class="mb-3 font-semibold text-lg uppercase tracking-wide text-white">Categories</h3>
      <div class="flex flex-wrap gap-2">
        <a href="#" class="px-3 py-1 text-sm rounded-full bg-white/10 border border-white/20 hover:bg-white/20 transition">New Collection</a>
        <a href="#" class="px-3 py-1 text-sm rounded-full bg-white/10 border border-white/20 hover:bg-white/20 transition">All Products</a>
        <a href="#" class="px-3 py-1 text-sm rounded-full bg-white/10 border border-white/20 hover:bg-white/20 transition">Discounted</a>
      </div>
    </div>

    <!-- Filters -->
    <div class="bg-black/20 backdrop-blur-xl p-4 rounded-2xl shadow-md border border-white/10">
      <h3 class="mb-3 font-semibold text-lg uppercase tracking-wide text-white">Filter by</h3>
      <div class="flex flex-wrap gap-2">
        <a href="#" class="px-3 py-1 text-sm rounded-full bg-white/10 border border-white/20 hover:bg-white/20 transition">Availability</a>
        <a href="#" class="px-3 py-1 text-sm rounded-full bg-white/10 border border-white/20 hover:bg-white/20 transition">Discount</a>
        <a href="#" class="px-3 py-1 text-sm rounded-full bg-white/10 border border-white/20 hover:bg-white/20 transition">Best Seller</a>
      </div>
    </div>
  </div>

  <!-- Product Grid -->
  <div class="w-[78%] pl-8">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      <% products.forEach(function(product) { %>
        <div class="bg-black/20 backdrop-blur-xl text-white rounded-2xl shadow-md border border-white/10 transition duration-300 hover:shadow-xl hover:border-white/30">
          <div class="h-52 w-full flex items-center justify-center rounded-t-2xl overflow-hidden bg-[<%= product.bgcolor %>] group relative">
            <img class="h-[11rem] object-contain transform transition duration-300 group-hover:scale-105" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="">
            <span class="absolute top-2 left-2 text-xs px-2 py-1 bg-black/60 rounded-full border border-white/20">#Clutche</span>
          </div>
          <div class="flex justify-between items-center px-4 py-4 bg-[<%= product.panelcolor %>] text-[<%= product.textcolor %>] rounded-b-2xl">
            <div>
              <h3 class="font-semibold text-md"><%= product.name %></h3>
              <h4 class="text-sm mt-1">â‚¹ <%= product.price %></h4>
            </div>
            <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-black shadow hover:scale-110 transition" href="#">
              <i class="ri-add-line"></i>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
