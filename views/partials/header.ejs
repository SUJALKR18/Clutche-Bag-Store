<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Clutche</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] text-white bg-[#000000]">

  <!-- Navbar -->
  <nav class="w-full fixed top-0 left-0 z-50 px-2 py-3 bg-[#000000] mb-20">
    <div class="flex items-center justify-between">

      <!-- Brand -->
      <h3 class="text-lg sm:text-3xl font-bold text-white">Clutche</h3>

      <% var loggedin = typeof(loggedin) !== "undefined" ? loggedin : true %>
      <% if (loggedin) { %>
      <!-- Icons Row -->
      <div class="flex items-center space-x-3 sm:space-x-6 text-sm sm:text-base">

        <!-- Add Products -->
        <a href="/owners/admin" class="flex flex-col items-center text-white hover:text-green-400 transition text-xs sm:text-sm">
          <span class="text-lg sm:text-2xl font-bold">+</span>
        </a>

        <!-- Shop Icon -->
        <a href="/shop" class="text-lg sm:text-2xl hover:scale-110 hover:text-yellow-400 transition" title="Shop">
          🛍️
        </a>

        <!-- Cart Icon -->
        <a href="/shop/cart" class="text-lg sm:text-2xl hover:scale-110 transition" title="Cart">
          🛒
        </a>

        <!-- Profile Icon -->
        <a href="/profile" class="w-6 h-6 sm:w-8 sm:h-8 flex items-center justify-center text-black bg-white rounded-full hover:scale-110 transition" title="Profile">
          👤
        </a>

        <!-- Logout Icon -->
        <a href="/logout" class="text-lg sm:text-2xl text-white hover:text-red-400 transition" title="Logout">
          <i class="ri-logout-box-r-line"></i>
        </a>
      </div>
      <% } %>

    </div>
  </nav>

</body>
</html>
